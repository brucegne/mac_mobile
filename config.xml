<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns	= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		    = "com.appsmade4u.mobileagconnect"
	version 	= "1.2"
	versionCode = "2">
	

	<name>MAC Mobile</name>

	<description>
        Mobile Ag Connect - Online Information System.
	</description>

	<author href="http://www.appsmade4u.com" email="bruce@appsmade4u.com">
		Bruce Gordon / AppsMade4U
	</author>
	<preference name="phonegap-version" value="3.5.0" />
	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

  <preference name="orientation" value="portrait" />
  
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/file"/>

  <icon src="icons/icon.png" width="72" height="72" />
  <icon src="icons/icon57.png" width="57" height="57" />
  <icon src="icons/icon72.png" width="72" height="72" />
  <icon src="icons/icon114.png" width="114" height="114" />

  <gap:splash src="mac
  loading.png" width="320" height="480" />
  
</widget>
